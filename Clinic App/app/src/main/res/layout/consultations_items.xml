<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E7E7E7" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relative_cons"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"

        >

        <View
            android:id="@+id/view_cons"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#FAD24D" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/view_cons"
            android:layout_toRightOf="@+id/view_cons"
            android:orientation="vertical">


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="300dp"
                android:maxLines="1"
                android:text=""
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/date_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="300dp"
                android:maxLines="1"
                android:text=""
                android:textColor="#000"
                android:textSize="13sp" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_cons"
        android:orientation="vertical">


        <View
            android:id="@+id/line_cons"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7" />

    </LinearLayout>


</RelativeLayout>

