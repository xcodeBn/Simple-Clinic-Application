<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/makeappn_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#FFF"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_headerTextAppearance="@style/Month"
        app:mcv_selectionColor="@color/colorPrimary"
        app:mcv_showOtherDates="all"
        app:mcv_weekDayTextAppearance="@style/Days"/>


    <TextView
        android:id="@+id/choose_dateAppn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeappn_date"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_btns"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="Choose"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>
